<%= form_for(@restaurant) do |f| %>
  <div class= "field">
    <%= f.label :name, "Restaurant Name" %>
    <%= f.text_field :name %>
  </div>
  <div class ="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </div>
  <div class = "field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class = "field">
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
  </div>
    <div class = "field">
    <%= f.label :url %>
    <%= f.url_field :url %>
  </div>
  <div class = "field">
    <%= f.label :photo_url %>
    <%= f.url_field :photo_url %>
  </div>
  <div class="actions">
    <%= f.submit "Save restaurant" %>
  </div>
<% end %>
