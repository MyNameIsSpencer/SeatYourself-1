    <%= f.text_field :name %>
  </div>
  <div class ="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </div>
  <div class = "field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class = "field">
    <%= f.label :phone %>
    <%= f.number_field :phone %>
  </div>
    <div class = "field">
    <%= f.label :url %>
    <%= f.number_field :url %>
  </div>
  <div class = "field">
    <%= f.label :photo_url %>
    <%= f.number_field :photo_url %>
  </div>
<% end %>
