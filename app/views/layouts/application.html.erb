<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="header">
      <div class="navlogo">
        <%= link_to "SeatYourself", root_path %>
      </div>
      <div class="login">
        <p>
          <% if current_user %>
            Signed in as <%= link_to current_user.username, user_path(current_user) %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
          <% else %>
            <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
          <% end %>
        </p>
      </div>
    </div>
  </header>
  
  <% if flash[:notice] %>
    <p id ="notice"><%= flash[:notice] %></p>
  <% end %>

  <% if flash[:alert] %>
    <p id= "alert"><%= flash[:alert] %></p>
  <% end %>

  <%= yield %>

</body>
</html>
